*
    box-sizing border-box
    padding 0
    margin 0

button
    -webkit-appearance none
    appearance none
    border none
    outline none
    background none

html
body
#root
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: #000000

.ui
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    pointer-events none

    *
        pointer-events auto
        font-family 'Roboto', sans-serif
        font-weight 900
        letter-spacing 0.5px

    .explode-button
        position absolute
        bottom 40px
        left calc(50% - 80px)
        width 160px
        height 40px
        border-radius 8px
        border 2px solid
        color #ffffff
        cursor pointer
        opacity 0.8
        transition opacity 0.15s

        &:hover
            opacity 1

    .group
        display flex
        align-items center
        position absolute
        bottom 40px
        right 40px

        .label
            margin-right 12px
            font-family Helvetica, Arial, sans-serif
            font-size 12px
            color #eeeeee
            opacity 0.65

        .choice
            display flex
            align-items center
            justify-content center
            width 30px
            height 30px
            margin-right 14px
            background #11111188
            transform rotate(45deg)
            color #ffffff
            cursor pointer
            pointer-events auto

            &.is-active
                background #424242

            .icon
                display block
                width 100%
                height 100%
                transform rotate(-45deg)
                background-size cover
                background-repeat no-repeat
                background-position center center
                opacity 0.65
                transition opacity 0.15s

            &:hover
                .icon
                    opacity 1

            &.is-mode-plain
                .icon
                    background-image url('./icons/modePlain.svg')
                    background-size 14px 14px

            &.is-mode-wireframe
                .icon
                    background-image url('./icons/modeWireframe.svg')
                    background-size 14px 14px
